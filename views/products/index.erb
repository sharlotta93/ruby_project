<h2>Products</h2>

<p>
  <a href="/products/new">Add new product</a>
</p>
<p>
  <label for="sort_by">sort by:</label>
      <select name="sort_by" id="sort_by">
        <option value="by_supplier">Show all</option>
        <% @suppliers.each do |supplier| %>
          <option value=<%= supplier.id %>><%= supplier.name %></option>
      <% end %>
       <form>
        <input type="submit" value="show" />
      </form>
      </select>
</p>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Category</th>
    <th></th>
    <th>Supplier</th>
    <th></th>
    <th>Units</th>
    <th></th>
    <th>Min Units Required</th>
    <th></th>
    <th>Buying cost</th>
    <th></th>
    <th>Selling Price</th>
    <th></th>
    <th>Description</th>
    <th></th>
    <th>Stock Level</th>
  </tr>
  <% for product in @products %>
  <tr>
    <td><%= product.name %></td>
    <td></td>
    <td><%= product.category%></td>
    <td></td>
    <td><%= product.supplier %></td>
    <td></td>
    <td><%= product.unit %></td>
    <td></td>
    <td><%= product.min_units_required %></td>
    <td></td>
    <td><%= product.buying_cost %></td>
    <td></td>
    <td><%= product.selling_price%></td>
    <td></td>
    <td><%= product.description %></td>
    <td></td>
    <td><%= product.stock_level %></td>
    <td>
      <form action="/products/<%= product.id %>" method="GET">
        <input type="submit" value="select" />
      </form>
      <form action="/products/<%= product.id %>/edit" method="GET">
        <input type="submit" value="edit" />
      </form>
      <form action="/products/<%= product.id %>/delete" method="POST">
        <input type="submit" value="delete" />
      </form>
    </td>
  </tr>
  <% end %>
</table>
