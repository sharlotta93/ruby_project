<h2>Edit <%= @supplier.name %></h2>
  <div class="forms">
    <form method="POST" action="/suppliers/<%= @supplier.id %>">

          <label for="name">Name: &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</label>
          <input type="text" name="name" id="name" value="<%= @supplier.name %>"/>
            <br>
          <label for="payment_method">Payment Method:</label>
            <select name="payment_method" id="payment_method" selected="<%= @supplier.payment_method %>">
              <option value='cash'>Cash</option>
              <option value='Card'>Card</option>
              <option value='Credit'>Credit</option>
            </select>

          <input type="submit" value="Update"/>
    </form>
  </div>
  <div class="go_back">
    <a href="/suppliers"><i class="fas fa-arrow-left"></i></a>
  </div>
