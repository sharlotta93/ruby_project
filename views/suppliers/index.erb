<h2>Suppliers</h2>

<p>
  <a href="/suppliers/new">Add new Supplier</a>
</p>

<table align="center" class="table">
  <tr>
    <th>Name</th>
    <th>Payment Method</th>
  </tr>
  <% for supplier in @suppliers %>
  <tr>
    <td><%= supplier.name %></td>
    <td><%= supplier.payment_method %></td>

    <td><form action="/suppliers/<%= supplier.id %>/edit" method="GET">
        <input type="submit" value="edit" />
      </form><form action="/suppliers/<%= supplier.id %>/delete" method="POST">
        <input type="submit" value="delete" />
      </form>
    </td>
  </tr>
  <% end %>
</table>
